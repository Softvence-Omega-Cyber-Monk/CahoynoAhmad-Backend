model Subscription {
  id                String      @id @default(cuid())
  planType          PlanType
  billingCycle      BillingCycle
  priceId           String      // Stripe Price ID
  productId         String      // Stripe Product ID
  priceAmount       Float       // Price in USD (or other currency)
  currency          String      @default("USD")
  dailyGenerations  Int
  toneStylesAllowed Int
  publicFeedAccess  Boolean
  communitySharing  Boolean
  postInteraction   Boolean
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  userProfile       UserProfile[]

  @@map("subscriptions")
}

enum PlanType {
  FREE
  HOT_MESS
  NO_FILTER
  SAVAGE_MODE
  SIPT_FOR_BRANDS
  ONE_TIME_ROAST
  LIFETIME_NO_FILTER
  LIFETIME_SAVAGE_MODE
}

enum BillingCycle {
  MONTHLY
  YEARLY
  ONE_TIME
  LIFETIME
}
