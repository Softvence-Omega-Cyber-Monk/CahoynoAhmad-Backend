model UserProfile {
  id              String        @id @default(cuid())
  userId          String        @unique
  profilePhoto    String?
  coverPhoto      String?
  bio             String?
  location        String?
  address         String?
  phone           String?
  facebook        String?
  twitter         String?
  instagram       String?
  linkedin        String?
  designation     String?
  creditLimit     Int?          @default(100)
  creditUsed      Int?          @default(0)
  isActive        Boolean       @default(true)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  user            Credential     @relation(fields: [userId], references: [id])
  subscriptionName String @default("FREE")
  subscriptionId  String?        
  subscription    Subscription?  @relation(fields: [subscriptionId], references: [id])
  payment Payment[]
  @@map("user_profiles")
}
