model Surah {
  id       Int    @id @default(autoincrement())
  number   Int    @unique
  name     String @unique
  meaning  String
  ayahs    Ayah[]
  gameData GameData[]
}

model Ayah {
  id          Int    @id @default(autoincrement())
  number      Int
  text        String
  translation String
  surahId     Int
  surah       Surah  @relation(fields: [surahId], references: [id])
  gameData    GameData[]
}
