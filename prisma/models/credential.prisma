model Credential {
  id               String             @id @default(cuid())
  email            String?
  phone            String?
  role             String             @default("USER")
  password         String
  name             String
  createdAt        DateTime           @default(now())
  dayStrek         Int                @default(0)
  budge            Int                @default(0)
  resetToken       String?
  image            String?
  isSubscribe      Boolean            @default(false)
  subscription     String             @default("FREE")
  leavel           Int?               @default(0)
  ayahRead         Int?               @default(0)
  practiceTime     Int?               @default(0)
  questCompleted   Int?               @default(0)
  updatedAt        DateTime           @updatedAt
  affiliateLink    String?
  totalAffiliate   Int                @default(0)
  totalClick       Int                @default(0)
  referCode        String?
  lastActiveDate   DateTime?
  totalXP          Int?
  total_earnings Float @default(0)
  otp              Int?
  note             Note[]
  payment          Payment[]
  userAns          UserAnswer[]
  userGameProgress UserGameProgress[]
  userQuests       UserQuest[]
  user_stat        User_Stat?

  @@map("credentials")
}

enum UserRole {
  USER
  ADMIN
}
