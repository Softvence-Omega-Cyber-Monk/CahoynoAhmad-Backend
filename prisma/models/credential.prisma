model Credential {
  id          String       @id @default(cuid())
  email       String       @unique
  phone String?     @unique
  role       String      @default("USER")
  password    String
  name String
  createdAt   DateTime     @default(now())
  dayStrek Int @default(0)
    budge Int @default(0)
  resetToken      String?
  image      String?
  totalXP Int?
  isSubscribe Boolean @default(false)
  subscription String @default("FREE")
  leavel Int? @default(0)
  ayahRead Int? @default(0)
  practiceTime Int? @default(0)
  questCompleted Int? @default(0)
  updatedAt   DateTime     @updatedAt
  affiliateLink String?
  referCode String?
  totalAffiliate Int @default(0)
  totalClick Int @default(0)
  note Note[]
  payment Payment[]
  user_stat User_Stat?
  lastActiveDate DateTime?
  @@map("credentials")
}
enum UserRole {
USER 
ADMIN
}
