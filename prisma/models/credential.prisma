model Credential {
  id          String       @id @default(cuid())
  email       String       @unique
  password    String
  fullName    String
  userName    String       @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  userProfile UserProfile?
  posts       Post[]
  role        UserRole     @default(USER)

  reactions Reaction[]
  comments  Comment[]
  webSubscribedUsers WebSubscribe?

  @@map("credentials")
}

enum UserRole {
  ADMIN
  USER
}
