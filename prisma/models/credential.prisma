model Credential {
  id          String       @id @default(cuid())
  email       String       @unique
  phone String?     @unique
  role       String      @default("USER")
  password    String
  name String
  createdAt   DateTime     @default(now())
  dayStrek Int @default(0)
    budge Int @default(0)
  resetToken      String?
  image      String?
  totalXP String?
  isSubscribe Boolean @default(false)
  subscription String?
  leavel Int? @default(0)
  ayahRead Int? @default(0)
  practiceTime Int? @default(0)
  questCompleted Int? @default(0)
  updatedAt   DateTime     @updatedAt

  @@map("credentials")
}
enum UserRole {
USER 
ADMIN
}
