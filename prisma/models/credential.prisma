model Credential {
  id          String       @id @default(cuid())
  email       String       @unique
  phone String?     @unique
  role       String   
  password    String
  firstName     String
  lastName    String      
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  resetToken      String?
  image      String?
  @@map("credentials")
}

enum UserRole {
  ADMIN
  TRAINE
}
