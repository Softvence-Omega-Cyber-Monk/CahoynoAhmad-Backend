model Post {
  id            String  @id @default(cuid())
  content       String
  image         String?
  totalComments Int     @default(0)
  totalReaction Int     @default(0)

  userId String
  user   Credential @relation(fields: [userId], references: [id])

  reactions Reaction[]
  comments  Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
