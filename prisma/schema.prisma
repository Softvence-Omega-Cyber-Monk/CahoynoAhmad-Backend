model Credential {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  fullName  String
  userName  String  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userProfile UserProfile? 
  role      UserRole @default(USER)
  @@map("credentials")
}
model UserProfile{
  id        String   @id @default(cuid())
  userId    String   @unique
  profilePhoto String?
  coverPhoto String?
  bio       String?
  location  String?
  address   String?
  phone     String?
  facebook   String?
  twitter    String?
  instagram  String?
  linkedin   String?
  designation String?
  creditLimit Int? @default(100)
  creditUsed Int? @default(0)
  creditBalance Int? @default(0)
  isActive  Boolean @default(true)
  subscriptionId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      Credential @relation(fields: [userId], references: [id])
  @@map("user_profiles")
}

enum UserRole {
  ADMIN
  USER
}
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
